{
  "manifest_version": 2,
  "name": "Asistencia Automática UCV",
  "version": "1.0",
  "description": "Herramienta para marcar automáticamente asistencias de estudiantes en el sistema UCV. Desarrollado con ❤️ por @branty",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "*://*/*"
  ],
  "background": {
    "scripts": ["background-firefox.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Asistencia Automática"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
